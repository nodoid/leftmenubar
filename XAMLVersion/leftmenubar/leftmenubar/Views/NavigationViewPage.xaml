	<ContentPage.Content>
		<StackLayout VerticalOptions="Start" HorizontalOptions="Start" x:Name="mainStack">
			<StackLayout VerticalOptions="Start" HorizontalOptions="Start" x:Name="topBarStack">
				<controls:Topbar x:Name="topBar" LeftImageSource="arrowback_blue" LeftHeight="32" LeftWidth="32" CentreImageSource="logo" CentreWidth="42" CentreHeight="42" RightImageSource="menu" RightWidth="32" RightHeight="32" BackgroundColor="Olive" Opacity=".75" />
			</StackLayout>
			<StackLayout VerticalOptions="Start" HorizontalOptions="Start" x:Name="innerStack" Orientation="Horizontal">
				<StackLayout Orientation="Vertical" VerticalOptions="StartAndExpand" x:Name="contentStack">
					<StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Padding="12" TranslationY="-8">
						<Label Text = "this is a test" />
					</StackLayout>
				</StackLayout>
			</StackLayout>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
